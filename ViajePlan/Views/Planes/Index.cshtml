@model List<ViajePlan.Models.ViewModels.PlanesViewModel>

@{
    ViewBag.Title = "Planes De Viaje";
}

<h1 class="h1" style="text-align:center;">@ViewBag.Title</h1>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered">
            <tr>
                <th>Id</th>
                <th>Plan de viaje</th>
                <th>Lugar</th>
                <th>Disponibilidad</th>
                <th>Cupo</th>
                <th></th>
            </tr>
            @foreach (var plan in Model)
            {
                <tr>
                    <td>@plan.IdPlan</td>
                    <td>@plan.Nombre</td>
                    <td>@plan.Lugar</td>
                    <td>@plan.Disponibilidad</td>
                    <td>@plan.Cupo</td>
                    <td>
                       <!-- <a href="Personas/Editar/.IdPersona" class="btn btn-info">Editar</a>
                        <a href="Personas/Eliminar/persona.IdPersona" class="btn bg-danger">Eliminar</a>
                       -->
                     </td>
                </tr>
            }

        </table>
    </div>
</div>

